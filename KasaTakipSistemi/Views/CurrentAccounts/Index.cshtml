@model IEnumerable<KasaTakipSistemi.ViewModels.CurrentAccountViewModel>
@{
    ViewData["Title"] = "Cari Hesaplar";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Müşteri ve tedarikçilerinize ait hesapları ve bakiyeleri buradan takip edebilirsiniz.</p>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-users"></i>
            <span class="caption-subject font-dark bold uppercase">Cari Hesap Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Yeni Cari Hesap Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

      
        <div class="mb-3">
            <form asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Cari adı, vergi no veya telefon ile ara..." value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> Bul</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Filtreyi Temizle</a>
                }
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.AccountTypeStr)</th>
                            <th>İletişim Bilgileri</th>
                            <th>Bakiye Özeti</th>
                            <th class="text-center" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td><span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.AccountTypeStr)</span></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                    {
                                        <div><i class="fas fa-phone-alt fa-fw me-1 text-muted"></i> @item.PhoneNumber</div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <div><i class="fas fa-envelope fa-fw me-1 text-muted"></i> @item.Email</div>
                                    }
                                </td>
                                <td>
                                   
                                    @if (item.Balances != null && item.Balances.Any(b => b.Amount != 0))
                                    {
                                        foreach (var balance in item.Balances.Where(b => b.Amount != 0))
                                        {
                                            <div class="fw-bold @balance.CssClass" style="font-size: 0.9rem;">
                                                @balance.AmountDisplay
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Bakiye yok</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar"><i class="fas fa-search"></i> Detay</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i> Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil"><i class="fas fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>Arama kriterlerinize uygun cari hesap bulunamadı.</span>
                }
                else
                {
                    <span>Henüz oluşturulmuş bir cari hesabınız bulunmamaktadır. "Yeni Cari Hesap Ekle" butonu ile başlayabilirsiniz.</span>
                }
            </div>
        }
    </div>
</div>