@model KasaTakipSistemi.Models.CurrentAccount
@using KasaTakipSistemi.Controllers // GetDisplayName için

@{
    ViewData["Title"] = "Cari Hesap Sil";
}

<h1>@ViewData["Title"]</h1>

<h3>Bu cari hesabı silmek istediğinizden emin misiniz?</h3>
<div class="alert alert-warning">
    <strong>Uyarı:</strong> Bu cari hesaba ait işlemler varsa, bu işlemlerin durumu etkilenebilir veya silme işlemi engellenebilir.
</div>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountType)</dt>
        <dd class="col-sm-9">@CurrentAccountsController.GetDisplayName(Model.AccountType)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>