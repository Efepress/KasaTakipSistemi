@model IEnumerable<KasaTakipSistemi.ViewModels.SafeAuthorizationViewModel>
@{
    ViewData["Title"] = "Kasa Yetkilileri";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Sahip olduğunuz kasalara atanmış kullanıcı yetkilerini bu sayfadan yönetebilirsiniz.</p>


<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-user-shield"></i>
            <span class="caption-subject font-dark bold uppercase">Yetki Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Assign" class="btn btn-success">
                <i class="fa fa-user-plus"></i> Yeni Yetki Ata
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

 
        <div class="mb-3">
            <form asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Kullanıcı adı, e-posta veya kasa adıyla ara..." value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> Bul</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Filtreyi Temizle</a>
                }
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserFullName)</th>
                            <th>@Html.DisplayNameFor(model => model.UserEmail)</th>
                            <th>@Html.DisplayNameFor(model => model.SafeName)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th class="text-center" style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UserFullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
                                <td><span class="badge bg-dark">@Html.DisplayFor(modelItem => item.SafeName)</span></td>
                                <td class="text-center">
                                    <span class="badge @item.StatusCssClass">@item.StatusText</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <form method="post" class="d-inline" asp-action="ToggleStatus">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userId" value="@item.UserId" />
                                            <input type="hidden" name="safeId" value="@item.SafeId" />
                                            <button type="submit" class="btn @item.ToggleButtonCssClass" title="@item.ToggleActionText">
                                                <i class="@item.ToggleActionIcon"></i>
                                            </button>
                                        </form>
                                        <form method="post" class="d-inline ms-1" asp-action="Revoke" onsubmit="return confirm('@item.UserFullName kullanıcısının @item.SafeName kasasındaki yetkisini kaldırmak istediğinizden emin misiniz? Bu işlem geri alınamaz.');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userId" value="@item.UserId" />
                                            <input type="hidden" name="safeId" value="@item.SafeId" />
                                            <button type="submit" class="btn btn-danger" title="Yetkiyi Tamamen Kaldır">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>Arama kriterlerinize uygun yetki kaydı bulunamadı.</span>
                }
                else
                {
                    <span>Henüz sahip olduğunuz bir kasaya atanmış yetkili kullanıcı bulunmamaktadır. "Yeni Yetki Ata" butonu ile başlayabilirsiniz.</span>
                }
            </div>
        }
    </div>
</div>