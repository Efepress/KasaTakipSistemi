@model IEnumerable<KasaTakipSistemi.ViewModels.EmployeeViewModel>
@{
    ViewData["Title"] = "Maaş Takip";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Personellerinizi ve maaş ödemelerini buradan yönetebilirsiniz.</p>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-user-tie"></i>
            <span class="caption-subject font-dark bold uppercase">Personel Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-user-plus"></i> Yeni Personel Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

     
        <div class="mb-3">
            <form asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Personel adıyla ara..." value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> Bul</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Filtreyi Temizle</a>
                }
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.MaasBilgiStr)</th>
                            <th>@Html.DisplayNameFor(model => model.KasaAd)</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center" style="width: 280px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaasBilgiStr)</td>
                                <td>@Html.DisplayFor(modelItem => item.KasaAd)</td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-controller="SalaryPayments" asp-action="Create" asp-route-employeeId="@item.Id" class="btn btn-sm btn-info" title="Maaş Ödemesi Yap"><i class="fas fa-hand-holding-usd"></i> Ödeme Yap</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Ödeme Geçmişi"><i class="fas fa-history"></i> Geçmiş</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>Arama kriterlerinize uygun personel bulunamadı.</span>
                }
                else
                {
                    <span>Henüz kayıtlı bir personel bulunmamaktadır. "Yeni Personel Ekle" butonu ile başlayabilirsiniz.</span>
                }
            </div>
        }
    </div>
</div>