@model KasaTakipSistemi.Models.Employee

@{
    ViewData["Title"] = "Personel Düzenle";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.FullName</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="SalaryAmount" class="control-label"></label>
                    <input asp-for="SalaryAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="SalaryAmount" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SalaryCurrencyId" class="control-label"></label>
                    <select asp-for="SalaryCurrencyId" class="form-control" asp-items="ViewBag.SalaryCurrencyId"></select>
                    <span asp-validation-for="SalaryCurrencyId" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SalaryPeriod" class="control-label"></label>
                    <select asp-for="SalaryPeriod" class="form-control" asp-items="ViewBag.SalaryPeriods"></select>
                    <span asp-validation-for="SalaryPeriod" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HireDate" class="control-label"></label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultSafeId" class="control-label"></label>
                    <select asp-for="DefaultSafeId" class="form-control" asp-items="ViewBag.DefaultSafeId">
                        <option value="">-- Varsayılan Kasa (Opsiyonel) --</option>
                    </select>
                    <span asp-validation-for="DefaultSafeId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}