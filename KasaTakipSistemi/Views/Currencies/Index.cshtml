@model IEnumerable<KasaTakipSistemi.Models.Currency>
@{
    ViewData["Title"] = "Para Birimleri";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Sistemde kullanılacak para birimlerini buradan yönetebilirsiniz.</p>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-coins"></i>
            <span class="caption-subject font-dark bold uppercase">Para Birimi Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Yeni Para Birimi Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Para Birimi Adı</th>
                            <th class="text-center">Sembol</th>
                            <th class="text-center" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center fw-bold">@Html.DisplayFor(modelItem => item.Symbol)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i> Düzenle</a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                Henüz tanımlanmış bir para birimi bulunmamaktadır.
            </div>
        }
    </div>
</div>