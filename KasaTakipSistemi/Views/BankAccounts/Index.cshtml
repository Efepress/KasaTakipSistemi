@model IEnumerable<KasaTakipSistemi.ViewModels.BankAccountViewModel>
@{
    ViewData["Title"] = "Banka Hesapları";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Banka ve kredi kartı hesaplarınızı buradan yönetebilirsiniz.</p>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-landmark"></i>
            <span class="caption-subject font-dark bold uppercase">Banka Hesabı Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Create" class="btn btn-success ms-2">
                <i class="fa fa-plus"></i> Yeni Hesap Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

      
        <div class="mb-3">
            <form asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Hesap adı, banka adı veya IBAN ile ara..." value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> Bul</button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Filtreyi Temizle</a>
                }
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.AccountName)</th>
                            <th>@Html.DisplayNameFor(model => model.BankName)</th>
                            <th>@Html.DisplayNameFor(model => model.Iban)</th>
                            <th>@Html.DisplayNameFor(model => model.AccountTypeName)</th>
                            <th>@Html.DisplayNameFor(model => model.CurrencyName)</th>
                            <th class="text-center" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                                <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Iban)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountTypeName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CurrencyName) (@item.CurrencySymbol)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i> Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil"><i class="fas fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>Arama kriterlerinize uygun banka hesabı bulunamadı.</span>
                }
                else
                {
                    <span>Henüz oluşturulmuş bir banka hesabınız bulunmamaktadır. "Yeni Hesap Ekle" butonu ile başlayabilirsiniz.</span>
                }
            </div>
        }
    </div>
</div>