@model IEnumerable<KasaTakipSistemi.Models.Transaction>
@{
    ViewData["Title"] = "Hesap Özeti - " + ViewBag.SelectedSafeName;
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Hesap Özeti</span>
        </li>
    </ul>
</div>

<h3 class="page-title">Hesap Özeti <small>@ViewBag.SelectedSafeName</small></h3>
<p class="text-muted">Seçili kasaya ait tüm gelir ve gider hareketlerini buradan görebilirsiniz.</p>


<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-list-alt"></i>
            <span class="caption-subject font-dark bold uppercase">Kasa Hareketleri</span>
        </div>
        <div class="actions">
            <a asp-action="CreateIncome" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Gelir Ekle
            </a>
            <a asp-action="CreateExpense" class="btn btn-danger ms-2">
                <i class="fas fa-minus"></i> Yeni Gider Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TransactionDate)</th>
                            <th>Açıklama / Cari</th>
                            <th class="text-end">Gelir</th>
                            <th class="text-end">Gider</th>
                            <th class="text-center">Para Birimi</th>
                            <th class="text-center" style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var rowClass = item.Type == TransactionType.Gelir ? "table-success-light" : "table-danger-light";
                            <tr>
                                <td>@item.TransactionDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                    @if (!string.IsNullOrEmpty(item.PayeeOrPayer))
                                    {
                                        <br />

                                        <small class="text-muted fst-italic">@item.PayeeOrPayer</small>
                                    }
                                </td>
                                <td class="text-end fw-bold text-success">
                                    @(item.Type == TransactionType.Gelir ? item.Amount.ToString("N2") : "")
                                </td>
                                <td class="text-end fw-bold text-danger">
                                    @(item.Type == TransactionType.Gider ? item.Amount.ToString("N2") : "")
                                </td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.Currency.Symbol)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                Bu kasada henüz herhangi bir hareket bulunmamaktadır.
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .table-success-light > td {
            background-color: #e6ffed !important;
        }

        .table-danger-light > td {
            background-color: #ffeaef !important;
        }
    </style>
}