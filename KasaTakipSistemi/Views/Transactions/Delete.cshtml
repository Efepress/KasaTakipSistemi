@model KasaTakipSistemi.Models.Transaction

@{
    ViewData["Title"] = "İşlem Sil";
}

<h1>İşlem Sil</h1>

<h3>Bu işlemi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>İşlem Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Kasa</dt>
        <dd class="col-sm-10">@Model.SafeId</dd>

        <dt class="col-sm-2">Tür</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Tutar</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Para Birimi</dt>
        <dd class="col-sm-10">@Model.CurrencyId</dd>

        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.TransactionDate.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-2">Alıcı / Gönderen</dt>
        <dd class="col-sm-10">@Model.PayeeOrPayer</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
