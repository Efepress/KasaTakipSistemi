@model IEnumerable<KasaTakipSistemi.Models.Safe>
@{
    ViewData["Title"] = "Kasalarım";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@ViewData["Title"]</span>
        </li>
    </ul>
</div>

<h3 class="page-title">@ViewData["Title"]</h3>
<p class="text-muted">Sahip olduğunuz tüm kasaları buradan yönetebilirsiniz.</p>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fas fa-cash-register"></i>
            <span class="caption-subject font-dark bold uppercase">Kasa Listesi</span>
        </div>
        <div class="actions">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Yeni Kasa Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Kasa Adı</th>
                            <th class="text-center" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle"><i class="fas fa-edit"></i> Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil"><i class="fas fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                Henüz oluşturulmuş bir kasanız bulunmamaktadır. "Yeni Kasa Ekle" butonu ile ilk kasanızı oluşturabilirsiniz.
            </div>
        }
    </div>
</div>