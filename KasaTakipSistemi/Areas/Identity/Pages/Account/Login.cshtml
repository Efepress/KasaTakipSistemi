@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="text-center mt-4 mb-4">
  
    <h1 class="h1 fw-bolder text-dark">KASA TAKİP SİSTEMİ</h1>
</div>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="h4 mb-0">@ViewData["Title"]</h2> 
                </div>
                <div class="card-body p-4 p-md-5">
                   
                    <section>
                        <form id="account" method="post">
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">E-posta</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />
                                <label asp-for="Input.Password" class="form-label">Şifre</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                            </div>
                            <div class="mt-4 text-center">
                                <p class="mb-1">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="small">Şifrenizi mi unuttunuz?</a>
                                </p>
                                <p class="mb-0">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small">Yeni bir hesap oluşturun</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <small class="text-muted">© @DateTime.Now.Year - Kasa Takip Sistemi - Efe Ali KANLI</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}